<% if resource.errors.any? %>
  <div id="error_explanation">
    <div class="bg-danger">
      <span class="bg-danger"><%= resource.errors.count %>件のエラーが発生しました</span>
    </div>
    <div>
      <% resource.errors.full_messages.each do |message| %>
        <br>・<%= message %>
      <% end %>
    </div>
  </div>
<% end %>
