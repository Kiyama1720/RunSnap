<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card login">
        <div class="card-body">
          <div class="logo">
            <h2 class="logo__font">新規登録</h2>
          </div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label "メールアドレス" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
              <% if resource.errors.include?(:email) %>
                <p class="text-danger mb-0">※ <%= resource.errors.full_messages_for(:email).first %>
              <% end %>
            </div>

            <div class="field">
              <%= f.label "ユーザーID" %><br />
              <%= f.text_field :user_id, autofocus: true, class: 'form-control' %>
              <% if resource.errors.include?(:user_id) %>
                <p class="text-danger mb-0">※ <%= resource.errors.full_messages_for(:user_id).first %>
              <% end %>
            </div>

            <div class="field">
              <%= f.label "ユーザー名" %><br />
              <%= f.text_field :name, autofocus: true, class: 'form-control' %>
              <% if resource.errors.include?(:name) %>
                <p class="text-danger mb-0">※ <%= resource.errors.full_messages_for(:name).first %>
              <% end %>
            </div>

            <div class="field">
              <%= f.label "パスワード" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> "文字以上")</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
              <% if resource.errors.include?(:password) %>
                <p class="text-danger mb-0">※ <%= resource.errors.full_messages_for(:password).first %>
              <% end %>
            </div>

            <div class="field">
              <%= f.label "パスワード確認" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
              <% if resource.errors.include?(:password_confirmation) %>
                <p class="text-danger mb-0">※ <%= resource.errors.full_messages_for(:password_confirmation).first %>
              <% end %>
            </div>

            <div class="actions">
              <%= f.submit "新規登録", class: "btn btn-primary w-100" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
